lsist<h1>Your lists of tasks</h1>

<table>
  <thead>
    <tr>
      <th>Lists' name</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td><%= link_to 'show tasks',list_tasks_path(list.id) %></td>
        <td><%= link_to 'edit', edit_list_path(list)%></td>
        <td><%= link_to 'Remove', list_path(list),
                method: :delete,
                data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h3>Create a new list</h3>
<%= link_to 'New list', new_list_path %>
