<div class="container">
  <div class="row">
    <div class="span4">


<h1>Todos#list</h1>
<hr>
<p>your Todos here</p>
<%= form_for @new_todo, :url => { :action => "add" }  do |f|  %>
    <%= f.text_field  :todo %>
    <%= f.submit "Add todo", class: "btn btn-primary" %>
 <%end%>

<div class="well">
<%= form_tag("/todos/complete/", :method => "post") do %>
<ul style="list-style-type:none;">
<% @todos.each do |t| %>
    <% if t.completed == true %>
     <li style="color:grey;"> <%= check_box_tag  "todos_checkbox[]",t.id %>  <strike><%= t.todo %></strike> </li>
  <% else %>
     <li> <%= check_box_tag  "todos_checkbox[]",t.id %> <%= t.todo %>  </li>
  <% end %>
<%end%>
</ul>
<%= submit_tag("Complete Todos", :class=>"btn btn-success") %>
<%end %>

<% if !flash[:error].nil? %>
 <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert" >Ã—</button>
    <strong><%= flash[:error] %></strong>
    </div>
<% end %>
 <% if flash[:success] %>
   <div class="alert alert-success">
     #show flash[:success] message here
   </div>


  <% end %>
 </div> <!-- well -->
    </div> <!-- span4 -->
  </div> <!-- row -->
</div> <!-- container -->

