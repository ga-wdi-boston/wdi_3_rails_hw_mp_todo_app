<%= form_for @project do |f| %>
  <% if @project.errors.any? %>
  <div id="error_explanation">

    <h2>
      Sorry, please try again:
    </h2>


  <ul>
    <%= @project.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>
    <% end %>
  </ul>
  </div>
  <% end %>

  <%= f.label :name %> <br />
  <%= f.text_field :name %> <br />
  <%= f.submit %>
<% end %>
