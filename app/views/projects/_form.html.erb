  </li>

  <li class="field">
  <%= f.label :leads %>
    <%= f.text_field :leads, placeholder: :leads %>
  </li>

    <li class="field">
    <%= f.label :status %>
    <%= f.select :status, %w{ Not-Started In-Process Completed}, :prompt=>'Select Status'%>
  </li>


  <li class="field">
    <%= f.label :due_date %>
    <%= f.date_select :due_date %>
