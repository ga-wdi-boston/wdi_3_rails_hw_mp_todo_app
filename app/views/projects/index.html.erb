<p id="notice"><%= notice %></p>

<h1>Projects</h1>
<table class="project_table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Leads</th>
      <th>Due Date</th>
      <th>Status</th>
      <th>Groups</th>
      <th>All Group Details</th>
      <th colspan=3></th>

    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.leads %></td>
        <td><%= project.due_date %></td>
        <td><%= project.status %></td>
        <td><ul><%project.groups.each do |group| %>
          <li><span class="glyphicon glyphicon-link"></span><%= link_to group.title, group_tasks_path(group.id) %> </li>
          <%end%>
            <li><% "No Groups Assigned" if project.groups.empty? %></li>
            </ul></td>
        <td><div class='btn btn-default btn-xs'><%= link_to 'View All Groups', project_groups_path(project.id) %></td></td>
         <td><div class='btn btn-primary btn-xs'><%= link_to 'Add Group',new_project_group_path(project.id) %></td></td>
        <td><div class='btn btn-info btn-xs'><%= link_to 'Edit Project', edit_project_path(project) %></div></td>
        <td><div class='btn btn-warning btn-xs'><%= link_to 'Erase Project', project, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>

 <div class='container' id='project'>
  <div class=row>
    <div class='cols-md-12'>
      <%=render 'form'%>
      <ol class="breadcrumb">
        <li><%= link_to 'Home', root_path %></li>
        <li> Projects </li>
      </ol>
    </div>
  </div>
</div>


