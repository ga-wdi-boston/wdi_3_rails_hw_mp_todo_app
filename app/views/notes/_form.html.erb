<%= form_for [@list, @task, @note] do |f| %>
  <% if @task %>
    <%= render 'shared/errors', object: @task %>
  <% end %>

  <div class="field">
    <%= f.label 'Note:' %><br>
    <%= f.text_area :body, autofocus: true %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-success'%>
  </div>
<% end %>
