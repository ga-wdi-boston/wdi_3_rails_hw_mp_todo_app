<p id="notice"><%= notice %></p>

<h1><%= @group.title %> Group Tasks</h1>

<table class="task_table">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Description</th>
      <th>Complete</th>
      <th>Due date</th>
      <th>Priority</th>
      <th>Show Details</th>
      <th>Edit Task</th>
      <th>Delete Task</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.subject %></td>
        <td><%= task.description %></td>
        <td><div class="complete_star">
    <%= "*" if task.complete %></div></td>
        <td><%= task.due_date %></td>
        <td><%= task.priority %></td>
        <td><%= link_to 'Notes', task_path(task) %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<ol class="breadcrumb">
  <li><%= link_to 'Home', root_path %></li>
  <li><%= link_to 'Projects', projects_path %></li>
  <li><%= link_to 'Groups', project_groups_path(@group.project_id) %></li>
  <li>Tasks</li>
  <li><div class='btn btn-primary btn-xs'><%= link_to 'Create New Task', new_group_task_path %></div></li>
</ol>


