<h1>These are your tasks:</h1>

<h3>Create a new task</h3>
<%= link_to 'New task', new_list_task_path(params[:list_id]) %>

<h2><%= pluralize(@tasks.count, 'task') %></h2>
<table class="table">

  <thead>
    <tr>
      <th>Tasks' name</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= link_to 'show task',list_task_path(params[:list_id],task.id)%></td>
        <td><%= link_to 'edit', edit_list_task_path(params[:list_id],task.id)%> </td>
        <td><%= link_to 'Remove', list_task_path(params[:list_id],task.id),
                    method: :delete,
                    data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Back to your lists', root_path %>

