<div class='panel'>
  <% if task.completed %>
    <%= link_to flop_list_task_path(task.list, task) do%>
      <i class='glyphicon glyphicon-check'></i>
    <% end %>
  <% else %>
    <%= link_to flop_list_task_path(task.list, task) do%>
      <i class='glyphicon glyphicon-unchecked'></i>
    <% end %>
  <% end %>
  <strong>Task:</strong>
  <%= task.name %>
</div>
<ul class='nav nav-pills'>
  <li><%= link_to 'Edit', edit_list_task_path(task.list, task) %></li>
  <li><%= link_to 'Notes', task_notes_path(task) %></li>
  <li><%= link_to 'Remove', [task.list, task], method: :delete, data: { confirm: 'Are you sure?' } %></li>
</ul>

