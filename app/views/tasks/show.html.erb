<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Is completed?:</strong>
  <%= @task.is_completed? %>
</p>

<p>
  <strong>List:</strong>
  <%= List.find(@task.list_id).name %>
</p>

<h1>Notes</h1>

<table>
  <thead>
    <tr>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task.notes.each do |note| %>
      <tr>
        <td><%= note.note %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_task_note_path(@task) %> |

<%= link_to 'Edit Task Details', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
