<p>
  <strong>Title:</strong>
    <%= @task.title %>
</p>

<table>
  <thead>
    <tr>
      <th>Your Note</th>
    </tr>
  </thead>

  <tbody>
    <% @task.notes.each do |note| %>
      <tr>
        <td><%= note.body %></td>
        <td><%= link_to 'edit', edit_list_task_note_path(params[:list_id],note.task.id,note.id) %></td>
        <!-- <td><%#= link_to 'Remove',list_task_note_path(params[:list_id],note.task.id,note.id),
                    method: :delete,
                    data: {confirm: 'Are you sure?'} %></td> -->
        <td><%#= link_to 'Remove',list_task_note_path(params[:list_id],params[:task_id],note.id),
                    method: :delete,
                    data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2> Add a note:</h2>
<%= form_for([@task.list, @task, @task.notes.build]) do |f| %>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back to your task', list_tasks_path %>

