<%= bootstrap_form_for [@project, @list] do |f| %>
    <%= render 'shared/errors', object: @list %>
    <p>
      <%= f.text_field :name, autofocus: true, label: "List Name" %>
    </p>
    <p>
      <%= f.text_field :description %>
    </p>
    <div class="button_slider_submit">
        <%= f.submit class: "btn btn-success"%>
    </div>
<% end %>
<div class="button_slider">
  <%= button_to list_path(@list.id), method: :get, class: "btn btn-info" do %>
    <i class="fa fa-step-backward fa-lg"></i> Back
  <% end %>
</div>

<div class="button_slider">
  <%= button_to projects_url, class: "btn btn-primary", method: :get do %>
    <i class="fa fa-home fa-lg"></i> Home
  <% end %>
</div>
