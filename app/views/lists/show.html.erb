List show page, display Tasks

<h1>
  <%= @list.name %> >> Tasks
</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.name, task %>
      <%= link_to 'Edit', edit_task_path(task) %> |
      <%= link_to 'Delete', task_path(task), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to 'Create New Task', new_list_task_path(@list) %>

