<div class="nav navbar">
  <div class="container">
    <ul class="nav nav-pills pull-left">
      <li><%= link_to 'All Lists', lists_path %></li>
    </ul>
    <ul class="nav nav-pills pull-right">
      <li><%= link_to 'Edit List', edit_list_path(@list) %></li>
      <li><%= link_to 'New Task', new_list_task_path(@list) %></li>
    </ul>
  </div>
</div>

<p id="notice"><%= notice %></p>

<h1>
  <%= @list.name %>
</h1>

<h2>Tasks</h2>


<% @list.tasks.each do |task| %>
  <div class="panel col-xs-3 col-xs-offset-2">
    <h3><%= link_to task.name, list_task_path(@list, task) %></h3>
    <div class='btn btn-default'><%= link_to 'Delete', list_task_path(@list, task), method: :delete, data: { confirm: 'Are you sure?' } %></div>
  </div>
<% end %>


