<h3 id="notice"><%= notice %></h3>
  <div class='col-sm-6 col-xs-8 col-xs-offset-2 col-sm-offset-0 text-center well well-lg'>
    <h1>Your Lists</h1>
    <h2><%= link_to 'New List', new_list_path %></h2>
  </div>
<div class='col-sm-4 col-xs-8 col-xs-offset-2'>
<% @lists.order(:created_at).each do |list| %>
    <div class='panel'>
      <%= link_to list.name, list %>
    </div>
      <ul class='nav nav-pills'>
        <li><%= link_to 'Edit', edit_list_path(list) %></li>
        <li><%= link_to 'Remove', list_path(list), method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </ul>
<% end %>
</div>
